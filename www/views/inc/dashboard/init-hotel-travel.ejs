<!-- Begin page -->
    <div id="wrapper">
        <!-- Top Bar Start -->
        <% include components/top_nav.ejs%>
        <!-- Top Bar End -->
        <% include components/left_nav.ejs %>
        <!-- Left Sidebar End -->
        <input type="text" id="_idTrip" 
            <%if(infoHotel){%>
                value="<%= infoHotel._id%>"
            <%}else{%>
                value=""
            <% }%>
        />
        <!-- Start right Content here -->
        <div class="content-page">
            <!-- Start content -->
            <br>
            <div class="content">
            <br>
                <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card m-b-20">
                                    <div class="card-body">
                                        <h4 class="mt-0 header-title">Thông Tin Khách Sạn K-Travel</h4>
                                        <br>
                                        <div class="form-group row">
                                            <label for="txtTitle" class="col-sm-2 col-form-label">Tiêu Đề</label>
                                            <div class="col-sm-10"><input class="form-control" placeholder="Khách Sạn 5 SAO gần bờ ao nhà bà bảy" id="txtTitle" type="text"
                                                <%if (infoHotel) {%>
                                                    value="<%= infoHotel.title%>"
                                                <%}%>
                                            ></div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="txtPrice" class="col-sm-2 col-form-label">Giá</label>
                                            <div class="col-sm-10"><input class="form-control" placeholder="59,000" id="txtPrice" type="number"
                                                <%if (infoHotel) {%>
                                                    value="<%= infoHotel.price%>"
                                                <%}%>
                                            ></div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="txtReview" class="col-sm-2 col-form-label">Đánh Giá</label>
                                            <div class="col-sm-10"><input class="form-control" placeholder="4" id="txtReview" type="number"
                                                <%if (infoHotel) {%>
                                                    value="<%= infoHotel.review%>"
                                                <%}%>
                                            ></div>
                                        </div>

                                        
                                        <div class="form-group">
                                            <label>Mô Tả</label>
                                            <div><textarea required="" class="form-control" rows="18" id="txtDescription" ><%if (infoHotel) {%><%= infoHotel.description%> <%}%></textarea></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <%if (infoHotel) {%>
                                <div class="col-md-4 offset-md-4">
                                    <button type="button" id="btnUpdateAndBack" _id="<%= infoHotel._id%>" class="btn btn-danger waves-effect waves-light">Cập Nhật và Trở Lại</button>
                                    <button type="button" id="btnUpdateAndSit"  _id="<%= infoHotel._id%>" class="btn btn-info waves-effect waves-light">Cập Nhật và Tiếp Tục</button>
                                </div>
                            <%}else{%>
                                <div class="col-md-4 offset-md-4">
                                    <button type="button" id="btnAddAndBack" class="btn btn-primary waves-effect waves-light">Thêm và Trở Lại</button>
                                    <button type="button" class="btn btn-danger waves-effect waves-light">Thêm và Tiếp Tục</button>
                                    <button type="button" id="btnClearData" class="btn btn-info waves-effect waves-light">Bỏ</button>
                                </div>
                            <%}%>
                            
                        </div>

                </div>
                <!-- container-fluid -->
            </div>
            <!-- content -->
             <footer class="footer">© 2018 KoF - <span class="d-none d-sm-inline-block">Crafted with <i class="mdi mdi-heart text-danger"></i> by <a href="https://ungdungthongminh.vn" target="blank">ungdungthongminh.vn</a></span>.</footer>
         </div>
        <!-- END right Content here -->
    </div>      